<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <error-page>
        <error-code>404</error-code>
        <location>/error/404.html</location>
    </error-page>

    <servlet>
        <servlet-name>findProductByPageServlet</servlet-name>
        <servlet-class>com.caizhen.action.servlet.product.findProductByPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>findProductByPageServlet</servlet-name>
        <url-pattern>/findProductByPageServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteSelectedServlet</servlet-name>
        <servlet-class>com.caizhen.action.servlet.User.DeleteSelectedServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteSelectedServlet</servlet-name>
        <url-pattern>/deleteSelectedServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>findCategoryByPageServlet</servlet-name>
        <servlet-class>com.caizhen.action.servlet.category.findCategoryByPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>findCategoryByPageServlet</servlet-name>
        <url-pattern>/findCategoryByPageServlet</url-pattern>
    </servlet-mapping>
    
</web-app>